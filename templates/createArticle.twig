{% extends 'base.twig' %}

{% block main %}
    <main class="container-content"> 
    <h1 class="form-h1">Créer un Article</h1>
    <p class="form-chapo">Ici vous pouvez créer votre article</p>
        <form action="index.php?page=article&action=create" method="post" class="form">
            <input type="text" name="nom" placeholder="Titre de l'article">
            <input type="text" name="chapo" placeholder="Sous Titre de l'Article">
            <div class="form__select">
                <label for="media-select">Choisissez l'image representative de l'article selon son nom</label>
                <select name="id_media" id="media-select">
                    <option value="">--Aucune Image--</option>
                    {% for m in medias %}
                        <option value="{{m.id}}">Fichier {{m.datatype}} : {{m.nom}}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form__select">
            <label for="page-select">Choisissez la page parente de l'article</label>
            <select name="id_page" id="page-select">
                {% for p in pages %}
                    <option value="{{p.id}}">{{p.nom}}</option>
                {% endfor %}
            </select>
            </div>
            <input type="text" name="auteur" placeholder="Auteur de l'Article">
            <input type="submit" name="create" value="Créer">
        </form>
    </main>
{% endblock main %}
